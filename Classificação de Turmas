#include <iostream>
#include <locale>

using namespace std;

int main(){
	string user_name; 
	float idade;
	setlocale (LC_ALL,"portuguese");
	cout<<"Informe o nome do aluno"<<endl;
	cin>>user_name;
	cout<<"Informe a idade do aluno"<<endl;
	cin>>idade;
	
	if (idade >= 5 && idade <= 7){
		cout<<"O aluno foi classificado para a turma: "<<endl;
		cout<<"Infantil A!"<<endl;
	}
	else if (idade >=8 && idade <= 10){
		cout<<"O aluno foi classificado para a turma: "<<endl;
		cout<<"Infantil B!"<<endl;
	}
	else if (idade >=11 && idade <=13){
		cout<<"O aluno foi classificado para a turma: "<<endl;
		cout<<"Juvenil A!"<<endl;
	}
	else if (idade >=14 && idade <=17){
		cout<<"O aluno foi classificado para a turma: "<<endl;
		cout<<"Juvenil B!"<<endl;
	}
	else if (idade >=18){
		cout<<"O aluno foi classificado para a turma: "<<endl;
		cout<<"Sênior!"<<endl;
	}
	else if (idade < 5){
		cout<<"O aluno é jovem demais para ser classificado em alguma turma"<<endl;
	}
}
