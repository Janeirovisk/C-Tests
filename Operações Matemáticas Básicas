#include<iostream>
#include<locale>
using namespace std;

int main(){
    int num1, num2, opc;
setlocale (LC_ALL,"Portuguese");
cout<<"Digite o primeiro número"<<endl;
cin >> num1;
cout << "Digite o segundo número" << endl;
cin >> num2;
cout << "Informe a operação desejada: 1 para soma, 2 para subtração, 3 para multiplicação ou 4 para divisão" << endl;
cin >> opc;

if(opc == 1){
    cout << "O resultado é: " <<endl;
    cout << num1 + num2 << endl;
    }
else if (opc == 2){
    cout << "O resultado é: " << endl; 
    cout << num1 - num2 << endl;
    }
else if (opc == 3){
    cout << "O resultado é: " << endl; 
    cout << num1 * num2 << endl;
    } 
else if (opc == 4){
    cout << "O resultado é: " << endl; 
    cout << num1 / num2 << endl;
    }
}